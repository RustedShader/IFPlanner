@page "/routes-to-fly"
@using IFPlanner.Components.Models

@if (_isInitialized != true)
{
    <div class="rz-m-xl-0">
        <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate"/>
    </div>
}
else
{
    <PageTitle>Discover Routes</PageTitle>
    <RadzenText Text="Short Haul Routes" TextStyle="TextStyle.DisplayH5" Style="margin-bottom: 10px;" />
    <RadzenDataGrid TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Data="_shortHaulScenicRoutes" AllowFiltering="true" AllowSorting="true" AllowVirtualization="true" SelectionMode="DataGridSelectionMode.Single" @bind-Value="_selectedShortHaulScenicRoutesRoute" AllowPaging="true" PageSize="7">
        <Columns>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Property="routeName" Title="Route Name"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Property="originIcao" Title="Origin ICAO"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Property="destinationIcao" Title="Destination ICAO"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Property="aircraftModel" Title="Aircraft Model"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Property="livery" Title="Livery"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Property="flightTime" Title="Flight Time"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.ShortHaulScenicRoute" Filterable="false" Sortable="false" TextAlign="TextAlign.Right" Frozen="true" FrozenPosition="FrozenColumnPosition.Right" Width="120px">
                <Template Context="data">
                    <RadzenButton Click="() => NavigateToPage(data.originIcao, data.destinationIcao, data.aircraft)" Icon="flight_takeoff" Text="Fly"/>
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
    <br/>
    <RadzenText Text="Medium Haul Routes" TextStyle="TextStyle.DisplayH5" Style="margin-bottom: 10px;" />
