            <RadzenDataGridColumn TItem="ToFlyRoutesClass.LongHaulScenicRoute" Filterable="false" Sortable="false" TextAlign="TextAlign.Right" Frozen="true" FrozenPosition="FrozenColumnPosition.Right" Width="120px">
                <Template Context="data">
                    <RadzenButton Click="() => NavigateToPage(data.originIcao, data.destinationIcao, data.aircraft)" Icon="flight_takeoff" Text="Fly"/>
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
    <br/>
    <RadzenText Text="Busiest Routes" TextStyle="TextStyle.DisplayH5" Style="margin-bottom: 10px;" />
