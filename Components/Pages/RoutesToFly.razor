            <RadzenDataGridColumn TItem="ToFlyRoutesClass.MediumHaulScenicRoute" Property="livery" Title="Livery"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.MediumHaulScenicRoute" Property="flightTime" Title="Flight Time"/>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.MediumHaulScenicRoute" Filterable="false" Sortable="false" TextAlign="TextAlign.Right" Frozen="true" FrozenPosition="FrozenColumnPosition.Right" Width="120px">
                <Template Context="data">
                    <RadzenButton Click="() => NavigateToPage(data.originIcao, data.destinationIcao, data.aircraft)" Icon="flight_takeoff" Text="Fly"/>
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
    <br/>
    <RadzenText Text="Long Haul Routes" TextStyle="TextStyle.DisplayH5" Style="margin-bottom: 10px;" />
    <RadzenDataGrid TItem="ToFlyRoutesClass.LongHaulScenicRoute" Data="_longHaulScenicRoutes" AllowFiltering="true" AllowSorting="true" AllowVirtualization="true" SelectionMode="DataGridSelectionMode.Single" @bind-Value="_selectedLongHaulScenicRoutesRoute" AllowPaging="true" PageSize="7">
        <Columns>
            <RadzenDataGridColumn TItem="ToFlyRoutesClass.LongHaulScenicRoute" Property="routeName" Title="Route Name"/>
